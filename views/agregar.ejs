    <%- include('./partials/header') %>
    <main class="registro">
        <form method="POST" action="/productos/agregarDB" enctype='multipart/form-data'>
            <label>Imagen</label>
            <input type="file" required placeholder="Suba la imagen del producto"
                name="pcfiles"
               id="files"
               multiple/><br/>
            <label>Descripcion</label>
            <input type="text" required placeholder="Ingrese el nombre del producto"
                 id="name"
                name="name"/><br/>
            <label>Precio</label>
            <input type="number" required placeholder="Ingrese el precio del producto"
                id="price"
                name="price"/><br/>
            <label>Cantidad</label>
            <input type="number" required placeholder="Ingrese el nÃºmero de productos"
                id="productos"
                name="productos"/><br/>
                <label>Descripcion</label>
            <textarea required placeholder="la descripcion del producto"
                id="descripcion"
                name="descripcion"
                rows="6"></textarea><br/>
                <label>idCategoria</label>
                <select type="number" placeholder="Ingrese la categoria del producto"
                id="idCategoria"
                name="idCategoria">
                <option value= ''disabled selected>'Elija una opcion'</option>
                <% for( let i = 0; i < categories.length; i++ ) { %>
                    <option value= '<%=categories[i].idCategorie%>'> <%=categories[i].name%></option>
                <% } %> 
   
            </select><br/>
            <button type="submit">Enviar</button>
            <button type="reset">Reestablecer  </button>
        </form>
    </main>
